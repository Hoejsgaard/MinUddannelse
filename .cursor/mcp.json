{
  "mcpServers": {
    "MCP_DOCKER": {
      "command": "docker run -i --rm alpine/socat STDIO TCP:host.docker.internal:8811"
    }
  },
  "agents": {
    "aula-assistant": {
      "loadRules": true,
      "followGuidelines": true,
      "description": "Aula Integration Assistant",
      "context": "file://mcp.context.json"
    },
    "general-assistant": {
      "description": "General coding assistant that follows project AI rules and guidelines",
      "loadRules": true,
      "followGuidelines": true
    }
  },
  "rules": {
    "directories": [".cursor/rules"],
    "alwaysApplied": [
      "main.mdc",
      "00-procedure.mdc",
      "user-preferences.mdc",
      "security/secrets.mdc",
      "workflows/commit-guidelines.mdc",
      "workflows/development.mdc"
    ],
    "requestable": {
      "backend/clean-code": {
        "path": ".cursor/rules/backend/clean-code.mdc",
        "description": "Rules for writing clean code, and how to not comment"
      },
      "backend/structure": {
        "path": ".cursor/rules/backend/structure.mdc",
        "description": "Expected layout and file placement for backend"
      },
      "backend/testing": {
        "path": ".cursor/rules/backend/testing.mdc",
        "description": "Test guidelines and best practices"
      },
      "frontend/basics": {
        "path": ".cursor/rules/frontend/basics.mdc",
        "description": "Frontend standards and best practices"
      }
    }
  }
}
